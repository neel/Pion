<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="Prototype_1.SettingsWindow"
	x:Name="Window"
	Title="Settings"
	ResizeMode="NoResize"
	Width="750" Height="150">

	<Grid x:Name="LayoutRoot">
				<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="White" Offset="0"/>
				<GradientStop Color="#FFF0EDBB" Offset="1"/>
			</LinearGradientBrush>
		</Grid.Background>
		<TextBlock HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="30,0,0,0" TextWrapping="Wrap" FontSize="26.667" Foreground="#FF00585F"><Run Language="de-ch" Text="Download Path"/></TextBlock>
		<TextBox TextWrapping="Wrap" Text="TextBox" VerticalContentAlignment="Center" RenderTransformOrigin="-0.155,0.364" Margin="236.446,43.265,168,43.265">
			<TextBox.BorderBrush>
				<LinearGradientBrush EndPoint="0,20" MappingMode="Absolute" StartPoint="0,0">
					<GradientStop Color="#FFABADB3" Offset="0.05"/>
					<GradientStop Color="#FFE2E3EA" Offset="0.07"/>
					<GradientStop Color="#FF00585F" Offset="1"/>
				</LinearGradientBrush>
			</TextBox.BorderBrush>
		</TextBox>
		<Button Content="Change" HorizontalAlignment="Right" Margin="0,43.265,48,43.265" Width="96" Click="Button_Click"/>
		</Grid>
</Window>